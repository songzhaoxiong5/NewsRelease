<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>news_init_index.jsp</welcome-file>
  </welcome-file-list>
 
		<jsp-config>  
		    <jsp-property-group>  
		        <description>include encoding</description>  
		        <display-name>JSPConfiguration</display-name>  
		        <url-pattern>*.jsp</url-pattern>  
		        <el-ignored>false</el-ignored>  
		        <page-encoding>UTF-8</page-encoding>  
		        <scripting-invalid>false</scripting-invalid>  
		        <include-prelude></include-prelude>  
		        <include-coda></include-coda>  
		    </jsp-property-group>  
		    
		    <jsp-property-group>  
		        <description>include encoding</description>  
		        <display-name>JSPConfiguration</display-name>  
		        <url-pattern>*.html</url-pattern>  
		        <el-ignored>false</el-ignored>  
		        <page-encoding>UTF-8</page-encoding>  
		        <scripting-invalid>false</scripting-invalid>  
		        <include-prelude></include-prelude>  
		        <include-coda></include-coda>  
		    </jsp-property-group>  
		</jsp-config>  
		<resource-ref>
		  	<description>newsrelease DataSource</description>
		  	<res-ref-name>jdbc/news</res-ref-name>
		  	<res-type>javax.sql.DataSource</res-type>
		  	<res-auth>Container</res-auth>
	  	</resource-ref>
	  	<servlet>
	  		<servlet-name>TopicControlServlet</servlet-name>
	  		<servlet-class>com.szx.controller.news.TopicControlServlet</servlet-class>
	  	</servlet>
		<servlet>
	  		<servlet-name>NewsControlServlet</servlet-name>
	  		<servlet-class>com.szx.controller.news.NewsControlServlet</servlet-class>
	 	 </servlet>
		 <servlet-mapping>
		  	<servlet-name>NewsControlServlet</servlet-name>
		  	<url-pattern>/newscontrol</url-pattern>
		 </servlet-mapping>
		 <servlet-mapping>
		 	<servlet-name>TopicControlServlet</servlet-name>
		 	<url-pattern>/topiccontrol</url-pattern>
		 </servlet-mapping>
		 <servlet>
		 	<servlet-name>CommentControlServlet</servlet-name>
		 	<servlet-class>com.szx.controller.news.CommentControlServlet</servlet-class>
		 </servlet>
		 <servlet-mapping>
		 	<servlet-name>CommentControlServlet</servlet-name>
		 	<url-pattern>/comment</url-pattern>
		 </servlet-mapping>
		 <listener>
		  	<listener-class>com.szx.util.GlobalResourceInitListner</listener-class>
		 </listener>
	  <filter>
	  	<filter-name>CharacterEncodingFilter</filter-name>
	  	<filter-class>com.szx.filter.CharacterEncodingFilter</filter-class>
	  	<init-param>
	  		<param-name>charset</param-name>
	  		<param-value>utf-8</param-value>
	  	</init-param>
	  </filter>
	  <filter>
	  	<filter-name>LoginCheckFilter</filter-name>
	  	<filter-class>com.szx.filter.LoginCheckFilter</filter-class>
	  </filter>
	  <filter-mapping>
	  	<filter-name>CharacterEncodingFilter</filter-name>
	  	<url-pattern>/*</url-pattern>
	  </filter-mapping>
		<filter-mapping>
	  <filter-name>LoginCheckFilter</filter-name>
	  	<url-pattern>/newspages/news_add.jsp</url-pattern>
	  	<url-pattern>/newspages/admin.jsp</url-pattern>
	  	<url-pattern>/newspages/topic_add.jsp</url-pattern>
	  	<url-pattern>/topic_control.jsp?opr=showAll</url-pattern>
	  </filter-mapping>
</web-app>
